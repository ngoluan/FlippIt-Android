<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_blue"
    tools:context="luan.com.flippit.WelcomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="83dp"
                android:layout_height="86dp"
                android:src="@drawable/action_icon" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="FlippIt"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="48dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="To begin, download the FlippIt Chrome extension to communicate between your phone and your computer. \n\nYou may download it at \nhttp://getchrome.flippit.ca. \n\nThe link has also been emailed to you."
            android:textColor="@color/white"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/phone_white" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:src="@drawable/doublearrows_white" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:src="@drawable/computer_white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/getStarted"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white"
                android:text="Get Started Tutorial"
                android:textColor="@color/dark_grey"
                android:textSize="16dp" />

            <Button
                android:id="@+id/welcomeContinue"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/rounded_white"
                android:text="Continue to Flippit"
                android:textColor="@color/dark_grey"
                android:textSize="16dp" />
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>
