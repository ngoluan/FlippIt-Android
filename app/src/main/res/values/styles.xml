<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Pass</item>
        <item name="actionBarStyle">@style/ActionBar.Pass</item>
        <item name="android:textColor">#333333</item>
        <item name="android:alertDialogStyle">@style/ThemeDialogCustom</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMenuButton</item>
    </style>
    <style name="ActionBar.Pass" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:background">@color/base_blue</item>
        <item name="android:backgroundSplit">@color/base_blue</item>
        <item name="android:backgroundStacked">@color/base_blue</item>
        <item name="android:icon">@drawable/action_icon</item>

        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@color/base_blue</item>
        <item name="backgroundStacked">@color/base_blue</item>
        <item name="backgroundSplit">@color/base_blue</item>
    </style>
    <style name="TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ThemeDialogCustom" parent="android:Theme.Holo.Dialog.NoActionBar" >
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="OverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/overflow</item>
    </style>
</resources>
